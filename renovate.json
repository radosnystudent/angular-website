{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "reviewers": ["radosnystudent"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "minor"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchCategories": ["js"],
      "addLabels": ["npm"]
    }
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 20,
  "schedule": [
    "before 4am"
  ]
}
